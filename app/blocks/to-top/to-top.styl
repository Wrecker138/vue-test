.to-top
	position fixed
	right 20px
	bottom 20px
	z-index -1
	opacity 0
	pointer-events: none
	transition all .3s
	&.visible
		opacity 1
		z-index 404
		pointer-events: all
	@media screen and (max-width 1080px)
		right 15px
		bottom 15px

		&__btn
			padding 0
			width 40px
			height 40px
			flex-center()
			align-items: center
