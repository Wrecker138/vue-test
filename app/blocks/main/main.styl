.main
	width 600px
	margin 0 auto
	line-height: 1.2em

.table
	display table
	width 100%

	&__row
		display table-row

	&__cell
		display table-cell
		padding 5px 10px
		border 1px solid #ccc
		width 20%
		vertical-align: middle
		textarea
			resize none
		&--remover
			padding: 0 0 0 10px
			border 0
			a
				display: inline-flex;
				width: 12px;
				height: 12px;
				img
					height 100%
					vertical-align: middle

.container
	display flex
	width 600px
	justify-content: flex-end
	margin  50px 0

.button
	display inline-block
	background-color #000000
	padding 10px 15px
	font-size: 20px
	color #fff

.form
	line-height: 1.4em
	padding 30px 40px

	&__block
		display flex
		flex-direction: column
		margin 0 0 30px

	&__label
		font-size: 14px

	&__input
		border-bottom 1px solid #000000
		font-size: 20px
		padding: 0 0 8px
